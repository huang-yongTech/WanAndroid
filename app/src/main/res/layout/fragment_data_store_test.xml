<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.hy.wanandroid.ui.viewmodel.DataStoreViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".fragment.DataStoreTestFragment">

        <include
            android:id="@+id/data_store_appbar"
            layout="@layout/public_toolbar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/data_store_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存储DataStore数据" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/data_store_read_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读取DataStore数据" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/data_store_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</layout>
